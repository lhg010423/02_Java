			// 서버와의 입출력 스트림 오픈
			// 보조 스트림을 통해 성능 개선
			// 스트림을 통해 읽고 쓰기
			// 통신 종료
			
			
		} catch (Exception e) {
			
		} finally {
			
		}
		
		
		
		
		
		
	}
	
	
	
	
	
	
	
	
	
	
	
	
}
